---
- name: 劇本 loop 安裝 nginx httpd
  hosts: all
  become: True
  vars:
  - users:
    - httpd
    - nginx
  tasks:
  - name: loop 安裝 nginx httpd
    yum:
      name: "{{ item }} "
      state: latest
    loop
    - httpd
    - nginx

  - name: loop 移除 nginx httpd
    yum:
      name: "{{ item }}"
      state: removed
    loop:
      "{{ users }}"
