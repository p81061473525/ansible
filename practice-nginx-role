---                                                                                                                                                                                                                                                                                                                     # tasks file for nginx1
- name: Install nginx1
  yum:
    name: nginx
    state: latest
  register: INSTALL_NGINX

- name: Debug for install nginx
  debug:
    msg:
    - " {{ INSTALL_NGINX }}"

- name: start nginx1
  service:
    name: nginx
    state: started
  register: START_NGINX

- name: Debug for start nginx1
  debug:
    msg:
    - " {{ START_NGINX }}"

- name: stop nginx1
  service:
    name: nginx
    state: stopped
  register: STOP_NGINX

- name: Debug for start nginx
  debug:
    msg:
    - " {{ STOP_NGINX }}"

[root@as-50-200 ansible]# cat ansible_fact_tester1/playbook.yml
---
- name: Practice nginx
  hosts: all
  gather_facts: True
  tasks:
  - name: echo selinunx status
    shell:
      getenforce

  - name: ansible_facts_hostname
    shell:
      echo " {{ ansible_hostname }} "

  - name: Debug ansible_hsotname
    debug:
      msg: " {{ ansible_hostname }} "

  - name: get ansible_hostname into txt for check
    shell:
      echo hostname = " {{ ansible_hostname }} " >> ~/hostname.txt
- name: removed_nginx1
  yum:
    name: nginx
    state: removed
  register: REMOVED_NGINX

- name: Debug for start nginx
  debug:
    msg:
    - " {{ REMOVED_NGINX }}"
